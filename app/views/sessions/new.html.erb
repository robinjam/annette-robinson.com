<h1>Log in</h1>
<%= form_tag '/login' do %>
  <p>
    <%= label_tag :username %>
    <%= text_field_tag :username %>
  </p>
  <p>
    <%= label_tag :password %>
    <%= password_field_tag :password %>
  </p>
  <p>
    <label></label>
    <%= submit_tag 'Log in' %> or
    <%= link_to 'Cancel', root_path %>
  </p>
<% end %>
